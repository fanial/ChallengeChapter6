<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BlurActivity"
    android:padding="5dp"
    android:background="@color/cream">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blur_image"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/vImage"
        android:layout_margin="@dimen/fragment_vertical_margin"
        android:layout_below="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="@string/image_from_gallery"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/btn_blur"
        android:layout_marginTop="@dimen/fragment_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vImage"
        android:layout_centerHorizontal="true"
        android:text="@string/blur_image" />

    <Button
        android:id="@+id/btn_see_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_blur"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/salmon"
        android:text="@string/see_image" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_circular"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@array/progress_colors"
        app:indicatorSize="@dimen/image_hw"
        app:indeterminateAnimationType="contiguous"
        android:visibility="gone"
        />


</RelativeLayout>